<%= form_for recipe do |f| %>
	
	<% if recipe.errors %>
	<div class="errors">
		<ul>
			<% recipe.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="form">
		<%= f.label :name %>
		<%= f.text_field :name %>
		<br>
		<%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
		<%= f.submit %>
	</div>

<% end %>